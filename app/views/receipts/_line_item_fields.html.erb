<fieldset>
  <div class='row'>
    <div class='col-md-9'>
      <div class="form-group">
        <%= f.label :name, :class => 'control-label col-md-2' %>
        <div class="col-md-10">
          <%= f.text_field :name, :class => 'form-control' %>
        </div>
        <%=f.error_span(:name) %>
      </div>
    </div>
    <div class='col-md-3'>
      <div class="form-group">
        <%= f.hidden_field :_destroy %>
        <%= link_to "remove", '#', class: "remove_fields btn btn-danger" %>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class='col-md-6'>
      <div class="form-group">
        <%= f.label :amount, :class => 'control-label col-md-3' %>
        <div class="col-md-9">
          <%= f.text_field :amount, :class => 'form-control' %>
        </div>
        <%=f.error_span(:amount) %>
      </div>
    </div>
    <div class='col-md-6'>
      <div class='form-group'>
        <%= f.label :refunded, class: 'control-label col-md-4' %>
        <div class="col-md-8">
          <%= f.number_field :refunded, :class => 'form-control' %>
        </div>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class='col-md-12'>
      <div class="form-group full-width-field">
        <%= f.label :usage, :class => 'control-label col-md-12' %>
        <div class="col-md-12">
          <%= f.text_area :usage, :class => 'form-control' %>
        </div>
        <%=f.error_span(:usage) %>
      </div>
    </div>
  </div>

</fieldset>

