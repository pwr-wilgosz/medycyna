<%- model_class = LineItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @line_item.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:usage) %>:</strong></dt>
  <dd><%= @line_item.usage %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @line_item.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:receipt_id) %>:</strong></dt>
  <dd><%= @line_item.receipt_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:refunded) %>:</strong></dt>
  <dd><%= @line_item.refunded %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              line_items_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_line_item_path(@line_item), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              line_item_path(@line_item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
